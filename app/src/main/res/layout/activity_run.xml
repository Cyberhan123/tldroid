<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:background="?attr/themedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/warning"
            android:text="@string/run_warning"
            android:textColor="?android:attr/textColorSecondary"
            app:monospace="@{true}"
            android:textSize="@dimen/text_size"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:layout_constraintTop_toTopOf="@id/constraintLayout"
            app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
            app:layout_constraintRight_toRightOf="@id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/prompt"
            android:text="> "
            android:textSize="@dimen/text_size_medium"
            android:textColor="?android:attr/textColorHint"
            app:monospace="@{true}"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            app:layout_constraintTop_toBottomOf="@id/warning"
            app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@id/edit_text"
            tools:hint="ls"
            android:textSize="@dimen/text_size_medium"
            app:monospace="@{true}"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionGo"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            app:layout_constraintTop_toTopOf="@id/prompt"
            app:layout_constraintLeft_toRightOf="@id/prompt"
            app:layout_constraintRight_toRightOf="@id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@id/prompt"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/prompt"
            app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
            app:layout_constraintRight_toRightOf="@id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/output"
                    app:monospace="@{true}"
                    android:textSize="@dimen/text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/error"
                    app:monospace="@{true}"
                    android:visibility="gone"
                    android:textColor="?attr/colorAccent"
                    android:textSize="@dimen/text_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </FrameLayout>

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</layout>
