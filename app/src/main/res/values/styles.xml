<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/solarizedBase02</item>
        <item name="colorPrimaryDark">@color/grey900</item>
        <item name="colorAccent">@color/solarizedOrange</item>
        <item name="android:windowBackground">@color/solarizedBase03</item>
        <item name="android:colorBackground">?android:attr/windowBackground</item>
        <item name="android:textColorPrimary">@color/solarizedBase2</item>
        <item name="android:textColorSecondary">@color/solarizedBase1</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:textColorLink">?attr/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/solarizedBase02</item>
        <item name="colorAccent">@color/solarizedOrange</item>
        <item name="android:textColorPrimary">@color/solarizedBase2</item>
        <item name="android:textColorSecondary">@color/solarizedBase1</item>
        <item name="android:textColorHint">?android:attr/textColorSecondary</item>
        <item name="android:textColorLink">?attr/colorAccent</item>
    </style>

</resources>
